        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        border-bottom: 1px solid var(--border-color);
    }

    .sidebar-logo {
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 8px;
        padding: 4px;
    }

    .sidebar-header h3 { margin: 0; font-size: 1.1rem; }

    .sidebar-nav {
        padding: 1rem 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .nav-item {
        background: transparent;
        color: var(--text-secondary);
        border: none;
        padding: 0.75rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.2s;
        text-align: left;
    }

    .nav-item:hover {
        color: white;
        background: rgba(255,255,255,0.05);
    }

    .nav-item.active {
        color: var(--color-teal);
        background: rgba(20, 184, 166, 0.1);
        border-right: 3px solid var(--color-teal);
    }

    /* Main Content */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
    }

    .top-header {
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 2rem;
        border-bottom: 1px solid var(--border-color);
        background: rgba(15, 23, 42, 0.9);
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .top-header h2 { margin: 0; font-size: 1.25rem; }

    .user-profile {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: var(--color-teal);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.85rem;
        color: var(--color-navy);
    }

    .content-body {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    /* Widgets */
    .widgets-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
    }

    .widget-card {
        padding: 1.5rem;
        border-radius: 16px;
        background: var(--color-navy-light);
        display: flex;
        align-items: center;
        gap: 1rem;
        border: 1px solid var(--border-color);
    }

    .widget-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .widget-icon.primary { background: rgba(56, 189, 248, 0.1); color: #38bdf8; }
    .widget-icon.warning { background: rgba(250, 204, 21, 0.1); color: #facc15; }
    .widget-icon.success { background: rgba(52, 211, 153, 0.1); color: #34d399; }
    .widget-icon.danger { background: rgba(248, 113, 113, 0.1); color: #f87171; }

    .widget-info h4 { margin: 0; font-size: 0.85rem; color: var(--text-secondary); font-weight: 500;}
    .widget-info .value { font-size: 1.75rem; font-weight: 700; color: white; display: block; margin-top: 0.25rem; }

    /* Panels & Layout */
    .panel {
        background: var(--color-navy-light);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 1.5rem;
    }

    .panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .panel-header h3 { margin: 0; font-size: 1.1rem; }

    .charts-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .map-container, .chart-container {
        width: 100%;
        height: 300px;
        margin-top: 1rem;
        border-radius: 12px;
        background: rgba(0,0,0,0.2);
        overflow: hidden;
    }

    .text-sm { font-size: 0.85rem; }
    .text-secondary { color: var(--text-secondary); margin: 0; }

    /* Table */
    .table-responsive { overflow-x: auto; }
    
    .claims-table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    .claims-table th, .claims-table td {
        padding: 1rem;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .claims-table th {
        color: var(--text-secondary);
        font-weight: 500;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .claims-table td {
        font-size: 0.95rem;
    }

    .tag.code {
        font-family: monospace;
        background: rgba(255,255,255,0.1);
        padding: 2px 6px;
        border-radius: 4px;
        color: #e2e8f0;
    }

    .badge {
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .badge.pending { background: rgba(250, 204, 21, 0.2); color: #fde047; border: 1px solid rgba(250, 204, 21, 0.5); }
    .badge.approved { background: rgba(56, 189, 248, 0.2); color: #7dd3fc; border: 1px solid rgba(56, 189, 248, 0.5); }
    .badge.processed { background: rgba(52, 211, 153, 0.2); color: #6ee7b7; border: 1px solid rgba(52, 211, 153, 0.5); }
    .badge.rejected { background: rgba(248, 113, 113, 0.2); color: #fca5a5; border: 1px solid rgba(248, 113, 113, 0.5); }

    .form-select {
        background: rgba(15, 23, 42, 0.8);
        color: white;
        border: 1px solid rgba(255,255,255,0.2);
        padding: 0.4rem;
        border-radius: 6px;
        font-size: 0.85rem;
        outline: none;
    }
    
    .form-select:focus { border-color: var(--color-teal); }

    /* Forecast Widget */
    .forecast-panel {
        display: flex;
        flex-direction: column;
    }

    .forecast-alert {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        border-radius: 12px;
        background: rgba(0,0,0,0.2);
        border-left: 4px solid transparent;
    }

    .forecast-alert.high { border-left-color: #f87171; background: rgba(248, 113, 113, 0.1); }
    .forecast-alert.high .forecast-icon { color: #f87171; }
    
    .forecast-alert.medium { border-left-color: #facc15; background: rgba(250, 204, 21, 0.1); }
    .forecast-alert.medium .forecast-icon { color: #facc15; }
    
    .forecast-alert.low { border-left-color: #34d399; background: rgba(52, 211, 153, 0.1); }
    .forecast-alert.low .forecast-icon { color: #34d399; }

    .forecast-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.05);
        border-radius: 50%;
    }

    .forecast-body {
        display: flex;
        flex-direction: column;
    }
    
    .forecast-body strong { font-size: 0.95rem; color: white; }
    .forecast-body span { font-size: 0.85rem; color: var(--text-secondary); margin-top: 0.2rem; }
    
</style>
