@page "/location"
@using FloodApp.Components.Location
@using FloodApp.Components.UI
@layout FloodApp.Components.Layout.MainLayout

<div class="h-screen w-full flex overflow-hidden">
    <!-- Left Panel: Form -->
    <div class="w-1/3 min-w-[350px] bg-gray-900 border-r border-gray-800 p-6 flex flex-col gap-6 z-10 shadow-xl overflow-y-auto">
        <div>
            <h1 class="text-2xl font-bold mb-1">Check Location</h1>
            <p class="text-secondary text-sm">Select a region to analyze flood risk.</p>
        </div>
        
        <LocationForm />
        
        <div class="mt-auto text-xs text-secondary text-center">
            Data provided by Disaster Management Center
        </div>
    </div>

    <!-- Right Panel: Map -->
    <div class="flex-1 bg-gray-800 relative z-0">
         <SriLankaRiskMap />
    </div>
</div>

<style>
    .w-1\/3 { width: 33.333333%; }
    .flex-1 { flex: 1 1 0%; }
    .min-w-\[350px\] { min-width: 350px; }
    .border-r { border-right-width: 1px; }
    .overflow-hidden { overflow: hidden; }
    .overflow-y-auto { overflow-y: auto; }
</style>
